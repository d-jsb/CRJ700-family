<!-- Bombardier CRJ700 series -->
<!-- Aircraft property settings specific to the CRJ900ER -->

<PropertyList include="CRJ700-main.xml">
	<limits>
		<mtow-rw-m>1847</mtow-rw-m>
		<mlw-rw-m>1603</mlw-rw-m>
		<mass-and-balance>
			<maximum-ramp-mass-lbs>82750</maximum-ramp-mass-lbs>
			<maximum-takeoff-mass-lbs>82500</maximum-takeoff-mass-lbs>
			<maximum-landing-mass-lbs>73500</maximum-landing-mass-lbs>
			<maximum-zero-fuel-mass-lbs>70000</maximum-zero-fuel-mass-lbs>
			<maximum-payload-lbs>21840</maximum-payload-lbs>
			<maximum-cargo-mass-lbs>6075</maximum-cargo-mass-lbs>
		</mass-and-balance>			
	</limits>
    <sim include="crj900-views.xml">
		<description>Bombardier CRJ900ER</description>
        <author>Ryan Miller, Henning S.</author>
        <status>production</status>
        <aircraft-version>1.5.2</aircraft-version>
		
		<variant-of>CRJ700</variant-of>
		<flight-model>yasim</flight-model>
		<aero>CRJ900ER</aero>
		
		<model>
			<path>Aircraft/CRJ700-family/Models/CRJ900.xml</path>
			<variant type="int">1</variant>
			<door>
				<position-x-m type="float">-13.459</position-x-m>
				<position-y-m type="float">-1.139</position-y-m>
				<position-z-m type="float">-1.796</position-z-m>
				<jetway-hood-deg type="float">3</jetway-hood-deg>
			</door>
			<has-slats type="bool">true</has-slats>
			<dimensions>
				<nose-distance-m>18</nose-distance-m>
				<cockpit-offset-x>-1.940</cockpit-offset-x>
			</dimensions>	
		</model>
		
		<sound>
			<path>Sounds/CRJ900-sounds.xml</path>
		</sound>
		
        <dimensions>
            <radius-m type="float">36.4</radius-m>
		</dimensions>
        
		<weight n="1">
			<name>PAX</name>
			<max-lb>15165</max-lb>
		</weight>
		<weight n="2">
			<name>Main Cargo</name>
			<max-lb>3036</max-lb>
		</weight>
		<weight n="3">
			<name>Aft Cargo</name>
			<max-lb>3036</max-lb>
		</weight>
		
        <menubar>
            <default>
                <menu n="100">
                    <label>Bombardier CRJ900ER</label>
				</menu>
			</default>
		</menubar>
	</sim>	
</PropertyList>
