<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier CRJ700 series -->
<!-- Aircraft property settings specific to the CRJ1000ER -->

<PropertyList include="CRJ700-main.xml">

	<sim>
		<description>Bombardier CRJ1000ER</description>
        <author>Ryan Miller, Henning S.</author>
        <status>production</status>
        <aircraft-version>1.5.0b</aircraft-version>
	
		<variant-of>CRJ700</variant-of>
		<flight-model>yasim</flight-model>
		<aero>CRJ1000ER</aero>

		<model>
			<path>Aircraft/CRJ700-family/Models/CRJ1000.xml</path>
			<variant type="int">2</variant>
			<door>
				<position-x-m type="float">-15.419</position-x-m>
				<position-y-m type="float">-1.139</position-y-m>
				<position-z-m type="float">-1.796</position-z-m>
				<jetway-hood-deg type="float">3</jetway-hood-deg>
			</door>
			<has-slats type="bool">true</has-slats>
			<limits>
				<mtow-rw-m>2120</mtow-rw-m>
				<mlw-rw-m>1750</mlw-rw-m>
				<mtow-lb>91800</mtow-lb>
				<mlw-lb>81500</mlw-lb>
			</limits>
			<dimensions>
				<nose-distance-m>20</nose-distance-m>
				<cockpit-offset-x>-3.3</cockpit-offset-x>
			</dimensions>	
		</model>

        <dimensions>
            <radius-m type="float">39.13</radius-m>
        </dimensions>

        <view n="0">
            <name>Captain View</name>
            <internal type="bool" archive="y">true</internal>
            <config>
                <x-offset-m archive="y">-0.528</x-offset-m>
                <y-offset-m archive="y">-0.468</y-offset-m>
                <z-offset-m archive="y">-16.395</z-offset-m>
            </config>
        </view>
        <view n="100">
            <name>Cabin View</name>
            <type>lookfrom</type>
            <internal type="bool" archive="y">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y">0</x-offset-m>
                <y-offset-m archive="y">-0.468</y-offset-m>
                <z-offset-m archive="y">0</z-offset-m>
            </config>
        </view>
        <view n="101">
            <name>First Officer View</name>
            <type>lookfrom</type>
            <internal type="bool" archive="y">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y">0.528</x-offset-m>
                <y-offset-m archive="y">-0.468</y-offset-m>
                <z-offset-m archive="y">-16.395</z-offset-m>
            </config>
        </view>
        <view n="102">
            <name>OH Panel</name>
            <type>lookfrom</type>
            <internal type="bool" >true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>0</x-offset-m>
                <y-offset-m>-0.468</y-offset-m>
                <z-offset-m>-16.65</z-offset-m>
                <pitch-offset-deg archive="y">59.2</pitch-offset-deg>
                <heading-offset-deg>0</heading-offset-deg>
                <default-field-of-view-deg type="double"  archive="y">85.3</default-field-of-view-deg>
            </config>
			<limits>
				<enabled type="bool">true</enabled>
				<left>
				  <heading-max-deg type="double">0</heading-max-deg>
				</left>
				<right>
				  <heading-max-deg type="double">0</heading-max-deg>
				</right>
			</limits>
        </view>
        <view n="103">
            <name>Center Panel</name>
            <type>lookfrom</type>
            <internal type="bool" >true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>0</x-offset-m>
                <y-offset-m>-0.468</y-offset-m>
                <z-offset-m>-16.65</z-offset-m>
                <pitch-offset-deg>-55</pitch-offset-deg>
                <heading-offset-deg>0</heading-offset-deg>
                <default-field-of-view-deg type="double">56</default-field-of-view-deg>
            </config>
 			<limits>
				<enabled type="bool">true</enabled>
				<left>
				  <heading-max-deg type="double">0</heading-max-deg>
				</left>
				<right>
				  <heading-max-deg type="double">0</heading-max-deg>
				</right>
			</limits>       
		</view>
        <view n="104">
            <name>Radio Panel</name>
            <type>lookfrom</type>
            <internal type="bool" >true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>0</x-offset-m>
                <y-offset-m>-0.97</y-offset-m>
                <z-offset-m>-16.58</z-offset-m>
                <pitch-offset-deg>-69.2</pitch-offset-deg>
                <heading-offset-deg>0</heading-offset-deg>
                <default-field-of-view-deg type="double">70</default-field-of-view-deg>
            </config>
			<limits>
				<enabled type="bool">true</enabled>
				<left>
				  <heading-max-deg type="double">5</heading-max-deg>
				</left>
				<right>
				  <heading-max-deg type="double">5</heading-max-deg>
				</right>
			</limits>        
		</view>
        
		<view n="108">
            <name>Nose gear</name>
            <type>lookfrom</type>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>0</x-offset-m>
                <y-offset-m>-2.46</y-offset-m>
                <z-offset-m>-14.9</z-offset-m>
                <pitch-offset-deg>-10</pitch-offset-deg>
                <heading-offset-deg>0</heading-offset-deg>
                <default-field-of-view-deg type="double">85.0</default-field-of-view-deg>
            </config>
        </view>      
        <view n="109">
            <name>Gear</name>
            <type>lookfrom</type>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>0</x-offset-m>
                <y-offset-m>-2.5</y-offset-m>
                <z-offset-m>-8.6</z-offset-m>
                <pitch-offset-deg>-10</pitch-offset-deg>
                <heading-offset-deg>180</heading-offset-deg>
                <default-field-of-view-deg type="double">80.0</default-field-of-view-deg>
            </config>
        </view> 
		<view n="110">
            <name>16A</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>-1.04</x-offset-m>
                <y-offset-m>-0.55</y-offset-m>
                <z-offset-m>-2.4</z-offset-m>
                <pitch-offset-deg>-14</pitch-offset-deg>
                <heading-offset-deg>86</heading-offset-deg>
                <default-field-of-view-deg type="double">85.0</default-field-of-view-deg>
            </config>
        </view>
       <view n="111">
            <name>23A</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>-1.05</x-offset-m>
                <y-offset-m>-0.55</y-offset-m>
                <z-offset-m>3.86</z-offset-m>
                <pitch-offset-deg>-10</pitch-offset-deg>
                <heading-offset-deg>100</heading-offset-deg>
                <default-field-of-view-deg type="double">70.0</default-field-of-view-deg>
            </config>
        </view>
       <view n="120">
            <name>16F</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>1.05</x-offset-m>
                <y-offset-m>-0.55</y-offset-m>
                <z-offset-m>-2.4</z-offset-m>
                <pitch-offset-deg>-14</pitch-offset-deg>
                <heading-offset-deg>270</heading-offset-deg>
                <default-field-of-view-deg type="double">85.0</default-field-of-view-deg>
            </config>
        </view>
       <view n="121">
            <name>23F</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m>1.05</x-offset-m>
                <y-offset-m>-0.55</y-offset-m>
                <z-offset-m>3.9</z-offset-m>
                <pitch-offset-deg>-10</pitch-offset-deg>
                <heading-offset-deg>270</heading-offset-deg>
                <default-field-of-view-deg type="double">70.0</default-field-of-view-deg>
            </config>
        </view>
 		<view n="122">
            <name>L wing</name>
            <type>lookfrom</type>
            <internal type="bool" archive="y">false</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y">-2.2</x-offset-m>
                <y-offset-m archive="y">-0.6</y-offset-m>
                <z-offset-m archive="y">1.4</z-offset-m>
                <pitch-offset-deg>-9</pitch-offset-deg>
                <heading-offset-deg>10</heading-offset-deg>
                <default-field-of-view-deg type="double">65</default-field-of-view-deg>
            </config>
        </view>
		<view n="123">
            <name>R wing</name>
            <type>lookfrom</type>
            <internal type="bool" archive="y">false</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y">10.1</x-offset-m>
                <y-offset-m archive="y">-0.6</y-offset-m>
                <z-offset-m archive="y">3.7</z-offset-m>
                <pitch-offset-deg>-2</pitch-offset-deg>
                <heading-offset-deg>135</heading-offset-deg>
                <default-field-of-view-deg type="double">65</default-field-of-view-deg>
            </config>
        </view>		
        <view n="124">
            <name>Ground walk</name>
            <type>lookfrom</type>
            <internal type="bool" archive="y">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y">-3.95</x-offset-m>
                <y-offset-m archive="y">-1.65</y-offset-m>
				<!-- ground z ~ -3.35m -->
                <z-offset-m archive="y">-15.65</z-offset-m>
                <pitch-offset-deg>0</pitch-offset-deg>
                <heading-offset-deg>180</heading-offset-deg>
            </config>
        </view>

        <weight n="1">
            <weight-lb>18000</weight-lb>
            <max-lb>26400</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <menubar>
            <default>
                <menu n="100">
                    <label>Bombardier CRJ1000ER</label>
                </menu>
            </default>
        </menubar>
    </sim>

</PropertyList>
