    <!-- Reflection shaders -->
    <effect>
        <name>Chrome reflect</name>
        <inherits-from>Effects/CRJ700reflect</inherits-from>
        <object-name>WingChrome</object-name>
        <object-name>CockpitFrame</object-name>
        <object-name>LandingLts</object-name>
