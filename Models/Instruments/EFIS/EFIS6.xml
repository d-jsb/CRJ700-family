<?xml version="1.0" encoding="UTF-8" ?>
<!-- 
    Collins Proline 4 CRT display model
-->

<PropertyList>
    <path>EFIS6.ac</path>
    <params>
        <name>EFIS6</name>
        <powerN />
        <dimN />
        <lightmap-texture-path />
        <lightmap-factor />
    </params>
    <animation>
        <type>pick</type>
        <object-name alias="/params/name" />
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>CRJ_EFIS.efis.displayWindow(5);</script>
            </binding>
        </action>
    </animation>  
    <animation>
        <type>material</type>
        <object-name alias="/params/name" />
        <condition>
            <greater-than-equals>
                <property alias="/params/powerN" />
                <value>24</value>
            </greater-than-equals>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop alias="/params/dimN" />
        </emission>
    </animation>
    <!-- Lightmaps -->
    <effect>
        <inherits-from>Models/Effects/CRJ700lightmap</inherits-from>
        <parameters>
            <lightmap-factor-prop alias="/params/lightmap-factor"/>
            <lightmap-factor n="0">
                <use alias="../../lightmap-factor-prop" />
            </lightmap-factor>
            <lightmap-factor n="1">
                <use alias="../../lightmap-factor-prop" />
            </lightmap-factor>
            <lightmap-factor n="2">
                <use alias="../../lightmap-factor-prop" />
            </lightmap-factor>
            <texture n="3">
                <image alias="/params/lightmap-texture-path" />
            </texture>
        </parameters>
        <object-name>Border</object-name>
        <object-name>Handle</object-name>
    </effect>
</PropertyList>
